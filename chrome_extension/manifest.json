{
    "manifest_version": 3,
    "name": "Gmail Email Colorizer by Word Count",
    "version": "1.0",
    "description": "Changes Gmail email background color based on preview text word count.",
    "permissions": ["storage"],
    "host_permissions": ["*://mail.google.com/*"],
    "content_scripts": [
      {
        "matches": ["*://mail.google.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]

  }
  